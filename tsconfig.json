{
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "module": "commonjs",
    "strict":true,
    "strictNullChecks": false,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/__test__"],
  "exclude": ["node_modules"],
}